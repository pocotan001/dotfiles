"-------------------------------------------------------------------------------
" Settings
"-------------------------------------------------------------------------------

set sessionoptions+=resize,tabpages,winsize,curdir
set lines=999       " 画面の高さ
set columns=120     " 画面の幅
set cmdheight=1     " コマンドラインの高さ
set previewheight=5 " プレビューウィンドウの高さ
set guioptions+=a   " GUI用のオプション

"-------------------------------------------------------------------------------
" Color
"-------------------------------------------------------------------------------

syntax on
set background=dark
colorscheme Tomorrow-Night
